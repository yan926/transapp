<% provide(:title, "Update your profile") %>


<h1 class="text-center">Update your profile</h1>
<div class="space"></div>

<div class="fix300 text-center">



<%= render 'shared/error_messages' %>
<%= form_for(@user) do |f| %>

<div class="form-group">
<%= image_tag( @user.avatar.url(:thumb), class: "avatar-img" ) if @user.avatar.exists? %>
<div class="fileUpload btn btn-default">
 <span id="uploadText">Upload Avatar</span>
<%= f.file_field :avatar, class: "upload" , id:"uploadBtn" %>
</div>
<script type="text/javascript" id="avatar-style-js">
document.getElementById("uploadBtn").onchange = function () {
    document.getElementById("uploadText").innerHTML = this.value; 
    $(".avatar-img").hide(1000);
};
</script>
</div>

<div class="form-group">
<%= f.label :name , class: "control-label hidden" %>
<%= f.text_field :name , class: "form-control", placeholder: :name %>
</div>
<div class="form-group">
<%= f.label :email, class: "control-label hidden" %>
<%= f.text_field :email , class: "form-control", placeholder: :email %>
</div>
<div class="form-group">
<%= f.label :password , class: "control-label hidden" %>
<%= f.password_field :password , class: "form-control",  placeholder: :password %>
</div>
<div class="form-group">
<%= f.label :password_confirmation, "Confirmation" , class: "control-label hidden" %>
<%= f.password_field :password_confirmation , class: "form-control",  placeholder: "Confirmation" %>
</div>




<%= f.submit "Save changes", class: "btn btn-large btn-primary" %>


<% end %>
</div>







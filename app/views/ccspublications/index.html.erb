<%= render "navtab" %>

<ul class="ccstable">
<% @ccspublications.each do |ccspublication| %>
  <% if I18n.locale.to_s == ccspublication.language  %>
    <li <% if @ccspublication.id == ccspublication.id  %>class='active'<% end %>>
      <%= link_to ccspublication.title,  { :no => ccspublication.id }  %>
    </li>
  <% end %>
<% end %>
</ul>

<div class="ccscontent">
<% if @ccspublication  %> 
  <p><%= @ccspublication.body.html_safe %></p>
  <% if signed_in? && current_user.admin? %> 
    <%= link_to "Edit", edit_ccspublication_path(@ccspublication) , class: "btn" %>
    <%= link_to "Delete", @ccspublication, method: :delete, data: { confirm: "You sure?" } ,class: "btn-clear" %>
  <% end %>
<% end %>
</div> 



<% if signed_in? && current_user.admin? %>
  <div class="full-size-form">
    <%= link_to "New", new_ccspublication_path() , class: "btn btn-large btn-primary" %>
  </div>
<% end %>


<% if @article.errors.any? %>
  <ul>
    <%= @article.errors.full_messages.each do |message| %>
        <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<%= form_for @article do |f| %>
  <div class="form-group full-size-form">
    <%= f.label :title, class: "control-label hidden"  %>
    <%= f.text_field :title ,  class: "form-control full-size" , placeholder: :title %>
  </div>
  <div class="form-group full-size-form">
    <%= f.label :content , class: "control-label hidden"  %>

    <%= f.kindeditor :content %>
  </div>
  <div>
    <% if action_name == "edit" %> 
      <%= f.submit "Save" , class: "btn btn-large btn-primary" %>
      <%= link_to "Cancel", articles_path  %>
    <% end %>
    <%= f.submit "Post" , class: "btn btn-large btn-primary" if action_name == "new" %>
  </div>
<% end %>


<script type="text/javascript">
$(function() { 
  KindEditor.create('#article_content', {
    "width": "100%",
    "height": 600,
    "allowFileManager": true,
